layout: base.njk
title: Blog
description: Thoughts and articles about software development
tags: website
---

<section>
    <h1>Blog</h1>
    <p>Articles and thoughts about software development, technology, and best practices.</p>
</section>

{% if site.features.blogCategories.enabled and collections.allTags.length > 0 %}
<section class="blog-categories">
    <h3>Browse by topic:</h3>
    <div class="project-tech">
        <a href="/blog" class="tech-tag">All</a>
        {% for tag in collections.allTags %}
        <a href="/blog/{{ tag | slug }}" class="tech-tag">{{ tag }}</a>
        {% endfor %}
    </div>
</section>
{% endif %}

<div class="blog-grid">
    {%- for post in collections.posts -%}
    <a href="{{ post.url }}" class="card blog-post-card">
        <h3>{{ post.data.title }}</h3>
        <p class="blog-post-date">{{ post.date | shortDate }}</p>
        {% if post.data.description %}
        <p class="blog-post-excerpt">{{ post.data.description }}</p>
        {% elif post.templateContent %}
        <p class="blog-post-excerpt">{{ post.templateContent | excerpt }}</p>
        {% endif %}
        {% if post.data.tags and site.features.blogCategories.enabled %}
        <div class="post-tags">
            {% for tag in post.data.tags %}
            {% if tag != "posts" %}
            <span class="tech-tag tag-small">{{ tag }}</span>
            {% endif %}
            {% endfor %}
        </div>
        {% endif %}
    </a>
    {%- endfor -%}
</div>

{% if collections.posts.length == 0 %}
<p class="blog-post-excerpt">No posts yet. Articles coming soon!</p>
{% endif %}

